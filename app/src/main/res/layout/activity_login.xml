<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/dp96"
        android:layout_height="@dimen/dp96"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp96"
        android:src="@mipmap/logo" />

    <com.p.library.widget.TextViewNoPadding
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp20"
        android:text="微医汇CRM"
        android:textColor="@color/orange_ff7e1e"
        android:textSize="@dimen/sp_22" />


    <com.p.library.widget.round.RoundTextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp150"
        android:gravity="center"
        android:text="微信登录"
        android:textColor="@color/orange_ff7e1e"
        android:textSize="@dimen/sp_18"
        app:rv_cornerRadius="@dimen/dp60"
        app:rv_strokeColor="@color/orange_ff7e1e"
        app:rv_strokeWidth="@dimen/dp1" />


</LinearLayout>